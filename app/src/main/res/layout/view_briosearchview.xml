<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:brio="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_briosearch_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:gravity="center_vertical">


    <EditText
        android:id="@+id/view_briosearch_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/selector_ap_bkg_edit_text"
        android:drawableRight="@android:drawable/ic_menu_search"
        android:drawableTint="@color/app_gris_barared"
        android:gravity="center"
        android:hint="Buscar"
        android:imeOptions="actionDone"
        android:paddingStart="8dp"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceMedium" />



    <ImageView
        android:id="@+id/view_briosearch_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="-40dp"
        android:layout_gravity="end|center_vertical"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/view_briosearch_text"
        android:padding="2dp"
        android:visibility="gone"
        android:background="@drawable/view_bkg_circle"
        android:src="@android:drawable/ic_menu_search" />

</RelativeLayout>