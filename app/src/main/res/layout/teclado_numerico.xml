            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textTitle"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:textSize="35dp" />


    </RelativeLayout>

