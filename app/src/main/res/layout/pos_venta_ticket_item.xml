<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/pos_ticket_item_padding"
        android:layout_centerVertical="true"
        android:gravity="end">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/btnCant"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentStart="true"
                android:text="1"
                android:focusable="false"
                android:layout_alignParentTop="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginRight="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Descripcion"
                android:id="@+id/tvDescripcion"
                android:gravity="center_vertical"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/tvImporteUnitario"
                android:layout_toEndOf="@+id/btnCant"
                android:maxLines="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="importeUnitario"
                android:id="@+id/tvImporteUnitario"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/tvDescripcion"
                android:gravity="center_vertical"
                android:layout_alignParentTop="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:layout_width="@dimen/brio_ic_action_size"
                android:layout_height="@dimen/brio_ic_action_size"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/tvBtnAdd1"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:background="@drawable/brio_ic_add"
                android:layout_marginLeft="4dp" />

            <TextView
                android:layout_width="@dimen/brio_ic_action_size"
                android:layout_height="@dimen/brio_ic_action_size"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/tvBtnRemove1"
                android:gravity="center"
                android:background="@drawable/brio_ic_remove1"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/tvBtnAdd1"
                android:layout_marginLeft="4dp" />

            <TextView
                android:layout_width="@dimen/brio_ic_action_size"
                android:layout_height="@dimen/brio_ic_action_size"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/tvBtnRemove"
                android:gravity="center"
                android:background="@drawable/brio_ic_remove_amarillo"
                android:layout_marginLeft="4dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/tvBtnRemove1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="importeTotal"
                android:id="@+id/tvImporteTotal"
                android:gravity="center_vertical|end"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:src="@drawable/pos_ticket_item_separator_dashed"
            android:layout_marginTop="5dp"

            android:layerType="software"/>

    </LinearLayout>

</RelativeLayout>